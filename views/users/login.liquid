{% layout 'layout.liquid' %}
{% block content %}

<div class="container-md">
    <form action="/users/login" method="POST">
        <fieldset>
            <legend>Welcome Back To TechSpace ! <br> Please Log In Here</legend>
            <label class="form-label">Username:</label>
            <input 
                type="text" 
                name="username" 
                class="form-control"
            >
            <label class="form-label">Password:</label>
            <input 
                type="password" 
                name="password" 
                class="form-control"
            >
        </fieldset>
        <input 
            type="submit"
            value="Log In" 
            class="btn btn-dark"
        >
        <a href="/users/signup" class="btn btn-dark">Sign UP!</a>

        
    </form>
   

</div>

{% endblock %}