{% layout 'layout.liquid' %}

{% block content %}
<div class="container-md">
    <form action="/profile/{{profile._id}}?_method=PUT" method="POST">
        <fieldset>
            <legend>Edit This {{Profile.name}}</legend>
            
            <label class="form-label" for="uploadPic">Upload Profile Pic</label>
            <input 
                type="file" 
                class="form-control" 
                id="upload" 
                placeholder="Upload Profile Pic"
                />
            <label class="form-label">Name:</label>
            <input 
                type="text" 
                name="name" 
                placeholder="enter name" 
                class="form-control"
                value="{{profile.name}}"
            >
            <label class="form-label">About ME:</label>
            <input 
                class="form-control" 
                type="text" 
                name="about-me" 
                placeholder="About Me"
            >
            <label class="form-label" for="customFile">Upload Resume</label>
            <input type="file" class="form-control" id="customFile" />
            
            
            
        </fieldset>
        <div class="btn-group">
            <input type="submit" value="Edit {{ profile.name }}" class="btn btn-dark">
            <a href="/myprofile" class="btn btn-warning">Nevermind</a>
        </div>
    </form>
</div>
{% endblock %}